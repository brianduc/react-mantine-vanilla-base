{
  "name": "react-mantine-vanilla-base",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "react-router dev --port 3000 --mode development",
    "build": "react-router build",
    "build:dev": "react-router build --mode development",
    "build:uat": "react-router build --mode uat",
    "start": "react-router-serve ./build/server/index.js",
    "preview": "vite preview --host 0.0.0.0",
    "format": "biome format --write",
    "check": "biome check",
    "fix": "biome check --write",
    "fix:lint": "biome lint --write",
    "fix:format": "biome format --write",
    "typecheck": "react-router typegen && tsc",
    "prepare": "husky"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.1",
    "@radix-ui/react-label": "^2.1.1",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-toast": "^1.2.4",
    "@react-router/fs-routes": "^7.0.1",
    "@react-router/node": "^7.1.1",
    "@tanstack/react-query": "^5.61.5",
    "@tanstack/react-query-devtools": "^5.61.5",
    "axios": "^1.7.7",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.13",
    "dot-env": "^0.0.1",
    "isbot": "^5",
    "jotai": "^2.10.3",
    "lucide-react": "^0.469.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.54.2",
    "react-router": "*",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "vite-plugin-ssr": "^0.4.142",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@react-router/dev": "*",
    "@types/node": "^20.14.9",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "autoprefixer": "^10.4.20",
    "globals": "^15.11.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.4.15",
    "typescript": "~5.6.0",
    "vite": "^5.4.10",
    "vite-tsconfig-paths": "^5.1.2"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
      "biome check --files-ignore-unknown=true",
      "biome check --write --no-errors-on-unmatched"
    ]
  }
}
